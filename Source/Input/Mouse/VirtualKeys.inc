
                ifndef _INPUT_MOUSE_VIRTUAL_KEYS_
                define _INPUT_MOUSE_VIRTUAL_KEYS_
MOUSE_BIT       EQU #80
SVK_LBUTTON     EQU %00000001
SVK_RBUTTON     EQU %00000010
SVK_MBUTTON     EQU %00000100
VK_LBUTTON      EQU SVK_LBUTTON | MOUSE_BIT
VK_RBUTTON      EQU SVK_RBUTTON | MOUSE_BIT
VK_MBUTTON      EQU SVK_MBUTTON | MOUSE_BIT
SVK_BUTTON_MASK EQU SVK_LBUTTON | SVK_RBUTTON | SVK_MBUTTON

LEFT_EDGE       EQU 0x01
RIGHT_EDGE      EQU 0x02
TOP_EDGE        EQU 0x04
BOTTOM_EDGE     EQU 0x08

                endif ; ~_INPUT_MOUSE_VIRTUAL_KEYS_
