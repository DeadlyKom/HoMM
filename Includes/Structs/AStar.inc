
                ifndef _STRUCTS_A_STAR_
                define _STRUCTS_A_STAR_

                struct FPath                                                    ; структура данных результата поиска пути А*                    [2 байта]
TileCoord       FVector8                                                        ; координаты тайла
                ends

                struct FAStarHeap                                               ; структура данных для поиска пути А*                           [4 байта]
                                                                                ; описание одного элемента кучи
Cost_F          DW #0000                                                        ; Cost_F = Cost_G + Cost_H
MetaAdr         DW #0000                                                        ; адрес хранения метаданных

                ends

                struct FAStarMeta                                               ; структура данных для поиска пути А*                           [8 байта]
                                                                                ; метаданные, привязанные к тайлу
Position        FVector8                                                        ; координаты тайла
Cost_G          DW #0000                                                        ; стоимость затрачиваемое на перемещение из стартовой ячейки в текущую
Cost_H          DW #0000                                                        ; стоимость затрачиваемое на перемещение от текущей ячейки до конечной
Parent          FVector8                                                        ; координаты родителя
                                                                                ; указание координат на самого себя, является стартовой точкой
; Heap            DB #00                                                          ; индекс кучи, позволит быстро переместить метаданные в новый адрес подкорректировав адрес в куче
                ends

                endif ; ~_STRUCTS_A_STAR_
