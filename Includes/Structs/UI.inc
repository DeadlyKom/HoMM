
                ifndef _STRUCTS_UI_
                define _STRUCTS_UI_

                struct FUILayer
; -----------------------------------------
;      7    6    5    4    3    2    1    0
;   +----+----+----+----+----+----+----+----+
;   | .. | .. | .. | .. | .. | .. | .. | VS |
;   +----+----+----+----+----+----+----+----+
;
;   свойства:
;   VS      [0]     - флаг, слой видимый
; -----------------------------------------
Flags           DB #00                                                          ; флаги
ArraySize       DB #00                                                          ; количество элементов в массиве
ArrayAdr        DW #0000                                                        ; адрес массива элементов
                ends

                struct FUIElement
; -----------------------------------------
;      7    6    5    4    3    2    1    0
;   +----+----+----+----+----+----+----+----+
;   | HV | AP | .. | .. | .. | .. | EN | VS |
;   +----+----+----+----+----+----+----+----+
;
;   свойства:
;   VS      [0]     - флаг, элемент видимый
;   EN      [1]     - флаг, элемент доступен для взаимодействия
;   состояния:
;   AP      [6]     - флаг, элемент нажат
;   HV      [7]     - флаг, элемент под курсором
; -----------------------------------------
FLags           DB #00                                                          ; флаги свойств и состояний
Handler         DW #0000                                                        ; адрес обработчика
                                                                                ; вызовится, если перекрыт или нажат
Location        FVector8                                                        ; положение элемента на экране (левый верхний угол)
Size            FSize                                                           ; размер элемента в знакоместах
                ends

                endif ; ~_STRUCTS_UI_
