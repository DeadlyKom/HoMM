
                ifndef _STRUCTS_GAME_CONFIG_
                define _STRUCTS_GAME_CONFIG_

                struct FGameConfig                                              ; переменные конфигурации игры                                  [байт]
Keys            FKeys                                                           ; клавиши                                                       [8 байт]
; -----------------------------------------
;      7    6    5    4    3    2    1    0
;   +----+----+----+----+----+----+----+----+
;   | .. | .. | .. | .. | AS | LG | I1 | I0 |
;   +----+----+----+----+----+----+----+----+
;
;   AS      [3]     - автосейв
;   LG      [2]     - язык
;                       0 - английский
;                       1 - русский/испанский (в зависимости от сборки)
;   I1,I0   [0,1]   - тип инпута
;                       00 - клавиаура
;                       01 - клавиаура переопределили
;                       10 - kempston 5 кнопок
;                       11 - kempston 8 кнопок
;                       xx - кемпстон мышка
; -----------------------------------------
Options         DB #00                                                          ; флаги игровых настроек                                        [1 байт]
; -----------------------------------------
;      7    6    5    4    3    2    1    0
;   +----+----+----+----+----+----+----+----+
;   | .. | .. | .. | .. | .. | KM | TJ | KJ |
;   +----+----+----+----+----+----+----+----+
;
;   KM      [2]     - флаг, наличие кемпстон мышки
;   TJ      [1]     - флаг, тип кемпстон джойстика
;                       0 - 5 кнопок (классический)
;                       1 - 8 кнопок
;   KJ      [0]     - флаг, наличие кемстон джойстика
; -----------------------------------------
Hardware        DB #00                                                          ; флаги ограничения железа                                      [1 байт]
SpeedScroll     DB #00                                                          ; скорость скролла тайловой карты                               [1 байт]
LeftEdge        DB #00                                                          ; левая грань видимой части     (в пикселах)                    [1 байт]
VisibleWidth    DB #00                                                          ; ширина видимой части          (в знакоместах)                 [1 байт]
TopEdge         DB #00                                                          ; верхняя грань видимой части   (в пикселах)                    [1 байт]
VisibleHeight   DB #00                                                          ; высота видимой части          (в пикселах)                    [1 байт]

                ends

                endif ; ~_STRUCTS_GAME_CONFIG_
