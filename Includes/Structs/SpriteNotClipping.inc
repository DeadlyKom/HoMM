
                ifndef _STRUCTS_SPRITE_NOT_CLIPPING_
                define _STRUCTS_SPRITE_NOT_CLIPPING_

                struct FSpriteBlock
OffsetData      DW #0000                                                        ; смещение до данных спрайта
Size            FSize                                                           ; размер спрайта
Location        FVector8                                                        ; смещение/фиксированное позиция спрайта
; -----------------------------------------
;      7    6    5    4    3    2    1    0
;   +----+----+----+----+----+----+----+----+
;   | .. | .. | .. | D1 | D0 | MV | MH | PO |
;   +----+----+----+----+----+----+----+----+
;
;   D1,D0   [4,3]       - тип вывода спрайта
;                           00 - LD с атрибутами
;                           01 - OR & XOR с атрибутами
;   MV      [2]         - флаг, зеркального отображения спрайта по вертикали
;   MH      [1]         - флаг, зеркального отображения спрайта по горизонтали
;   PS      [0]         - флаг, если 0, то поле Location хранит смещение, иначе позицию спрайта
;                         в экранных координат
; -----------------------------------------
Flags           DB #00                                                          ; флаги вывода спрайта

                ends

                endif ; ~_STRUCTS_SPRITE_NOT_CLIPPING_
