
                ifndef _STRUCTS_EVENT_
                define _STRUCTS_EVENT_

                struct FEvent                                                   ; структура описывающая собитие                             [6 байта]
Type            DB #00                                                          ; тип события                                               [1 байт]
; -----------------------------------------
;      7    6    5    4    3    2    1    0
;   +----+----+----+----+----+----+----+----+
;   | EP | .. | .. | .. | .. | .. | L1 | L0 |
;   +----+----+----+----+----+----+----+----+
;
;   EP      [7]     - фаза выполнения события, где
;                       0 - перед орисовкой
;                       1 - после отрисовки
;   L1-l0   [1,0]   - время жизни события
;                       00 - выполняется один раз
;                       01 - живёт заданное время
;                       10 - живёт пока выполняется условие или до явного удаления
;                       11 - резерв
; -----------------------------------------
Flags           DB #00                                                          ; флаги                                                     [1 байт]
Lifetime        DB #00                                                          ; время жизни                                               [1 байт]
Page            DB #00                                                          ; страница функции                                          [1 байт]
Function        DW #0000                                                        ; адрес функции                                             [2 байта]
                ends

                endif ; ~_STRUCTS_EVENT_
