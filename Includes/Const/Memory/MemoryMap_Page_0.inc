
                ifndef _CONST_MEMORY_MAP_PAGE_0_
                define _CONST_MEMORY_MAP_PAGE_0_

                ;   +-------+------------------------------------------+-------+
                ;   | #C000 |                         StaticChunkArray | #0100 | 
                ;   +-------+------------------------------------------+-------+
                ;   | #C100 |                        DynamicChunkArray | #0100 |
                ;   +-------+------------------------------------------+-------+
                ;   | #0000 |                              StaticArray | #0800 |
                ;   +-------+------------------------------------------+-------+
                ;   | #0000 |                             DynamicArray | #0800 | ; ToDo можно уменьшить размер структуры динамических объектов
                ;   +-------+------------------------------------------+-------+
                ;   | #D000 |                                   FoWBuf | #1000 | ; примерно 64х64 по байту и 90х90 на 0.5 дайт на ID биома
                ;   +-------+------------------------------------------+-------+
                ;   | #E000 |                                 BiomeBuf | #1000 | ; примерно 64х64 по байту и 90х90 на 0.5 дайт на ID биома
                ;   +-------+------------------------------------------+-------+
                ;   | #F000 |                    ObjectDefaultSettings | #0400 | ; настройки объектов по умолчанию
                ;   +-------+------------------------------------------+-------+
                ;   | #F400 |                                     Code | #0С00 | ; блок кода
                ;   +-------+------------------------------------------+-------+

                ; таблица быстрого формирования тумана войны (256 байт)
                ; таблица смещений быстрого рассчёта положения тайла (256 байт)

                module Page
MapRaw          EQU PAGE_0
BiomeBuf        EQU PAGE_0
Page0           EQU PAGE_0
                endmodule

                module Size
StaticChunkArray        EQU #0100                                               ; размер буфера чанков статических объектов
DynamicChunkArray       EQU #0100                                               ; размер буфера чанков динамических объектов
FoWBuf                  EQU #1000                                               ; размер буфера тумана войны
BiomeBuf                EQU #1000                                               ; размер буфера биома (тайлов)
ObjectDefaultSettings   EQU #0400                                               ; размер таблицы настроек объектов по умолчанию (OBJECT_DEFAULT_SETTINGS_MAX * FObjectDefaultSettings)
Code.Page0              EQU #0C00                                               ; размер блока кода
                endmodule

                module Adr

StaticChunkArray        EQU #C000                                               ; адрес буфера чанков статических объектов
DynamicChunkArray       EQU Adr.StaticChunkArray + Size.StaticChunkArray        ; адрес буфера чанков динамических объектов
FoWBuf                  EQU #D000                                               ; адрес буфера тумана войны
BiomeBuf                EQU #E000                                               ; адрес буфера биома (тайлов)
                                                                                ; примерно 64х64 по байту и 90х90 на 0.5 дайт на ID биома
ObjectDefaultSettings   EQU #F000                                               ; адрес таблицы настроек объектов по умолчанию
Code.Page0              EQU #F400                                               ; адрес блока кода
                endmodule

                endif ; ~_CONST_MEMORY_MAP_PAGE_0_
