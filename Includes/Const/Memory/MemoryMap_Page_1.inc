Code.Page1      EQU #0A00                                                       ; размер блока кода
                endmodule

                module Adr
Hextile         EQU #C000                                                       ; адрес буфера гексагональных тайлов
SurfPass        EQU #EC00                                                       ; ToDo: добавить проходимость поверхности (стоимость прохождение по тайлу, 256 типов)
Code.Page1      EQU #F000                                                       ; адрес блока кода
                                                                                ; (помещён в центр, при распоковке затрутся ObjectDefaultSettings)
FoundPath       EQU #FA00                                                       ; адрес массива найденого пути в виде последовательности координат тайлов (FPath),
                                                                                ; где нулевой элемент является последним
                endmodule

                endif ; ~_CONST_MEMORY_MAP_PAGE_1_
