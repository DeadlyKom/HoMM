
                ifndef _CONST_MEMORY_MAP_PAGE_1_
                define _CONST_MEMORY_MAP_PAGE_1_

                ;   +-------+------------------------------------------+-------+
                ;   | #C000 |                              MapMetadata | #1000 |
                ;   +-------+------------------------------------------+-------+
                ;   | #D000 |                                 MapBiome | #1000 |
                ;   +-------+------------------------------------------+-------+
                ;   | #E000 |                                AStarHeap | #0400 |
                ;   +-------+------------------------------------------+-------+
                ;   | #E400 |                                AStarMeta | #0800 |
                ;   +-------+------------------------------------------+-------+
                ;   | #EC00 |                       SurfacePassability | #0100 | ; ToDo: добавить проходимость поверхности (стоимость прохождение по тайлу, 256 типов)
                ;   +-------+------------------------------------------+-------+
                ;   | #ED00 |                                 свободно | #0300 |
                ;   +-------+------------------------------------------+-------+
                ;   | #F000 |                                     Code | #0A00 | ; блок кода
                ;   +-------+------------------------------------------+-------+
                ;   | #FA00 |                                FoundPath | #0100 | ; при загрузке будет мусор
                ;   +-------+------------------------------------------+-------+
                ;   | #FB00 |                                 свободно | #0600 |
                ;   +-------+------------------------------------------+-------+

                module Page
Page1           EQU PAGE_1
MapBiome        EQU PAGE_1
                endmodule

                module Size
MapMetadata     EQU #1000                                                       ; размер буфера метаданных карты
MapBiome        EQU #1000                                                       ; размер буфера биома (тайлов)
AStarHeap       EQU #0400                                                       ; размер буфера А* куча (FAStarHeap * ASTAR_CELL_MAX)
AStarMeta       EQU #0800                                                       ; размер буфера А* метаданные (FAStarMeta * ASTAR_CELL_MAX)
SurfPass        EQU #0100                                                       ; ToDo: добавить проходимость поверхности (стоимость прохождение по тайлу, 256 типов)
Code.Page1      EQU #0A00                                                       ; размер блока кода
FoundPath       EQU #0100                                                       ; размер массива найденого пути в виде последовательности координат тайлов (FPath),
                                                                                ; где нулевой элемент является последним
                endmodule

                module Adr
MapMetadata     EQU #C000                                                       ; адрес буфера метаданных карты
MapBiome        EQU #D000                                                       ; адрес буфера биома (тайлов)
AStarHeap       EQU #E000                                                       ; адрес буфера А* куча
AStarMeta       EQU #E400                                                       ; адрес буфера А* метаданные
SurfPass        EQU #EC00                                                       ; ToDo: добавить проходимость поверхности (стоимость прохождение по тайлу, 256 типов)
Code.Page1      EQU #F000                                                       ; адрес блока кода
                                                                                ; (помещён в центр, при распоковке затрутся ObjectDefaultSettings)
FoundPath       EQU #FA00                                                       ; адрес массива найденого пути в виде последовательности координат тайлов (FPath),
                                                                                ; где нулевой элемент является последним
                endmodule

                endif ; ~_CONST_MEMORY_MAP_PAGE_1_
